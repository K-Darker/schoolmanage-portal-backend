<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN" 
"http://struts.apache.org/dtds/struts-config_1_3.dtd">
<struts-config>
	<!-- 用的是struts1.3 这里主要配置的是一个控制器的表单和跳转-->
	<form-beans>
		<form-bean name="employeeForm" type="com.schoolmanage.forms.EmployeeForm"></form-bean>
		<!-- 配置用于查询的表单 -->
		<form-bean name="queryMessageForm" type="com.schoolmanage.forms.QueryMessageForm"></form-bean>
		<form-bean name="trainsMessageForm" type="com.schoolmanage.forms.TrainsMessageForm"></form-bean>
		<form-bean name="retireMessageForm" type="com.schoolmanage.forms.RetireMessageForm"></form-bean>
		<form-bean name="rcglMessageForm" type="com.schoolmanage.forms.RcglMessageForm"></form-bean>
	</form-beans>
	
	<!-- 配置action的有关信息 -->
	<action-mappings>
		<action path="/login" name="employeeForm"
			type="com.schoolmanage.loginactions.LoginAction" parameter="flag">
			<!-- 配置跳转的信息 -->
			<forward name="ok" path="/WEB-INF/manage.jsp"></forward>		
			<forward name="error" path="/WEB-INF/login.jsp"></forward>
		</action>
		<action path="/messages" name="queryMessageForm" type="com.schoolmanage.messageactions.MessagesAction" parameter="flag">
			<forward name="query" path="/jsp/message/personmanage.jsp"></forward>
			<forward name="edit" path="/jsp/message/editperson.jsp"></forward>
			<forward name="queryEmp" path="/jsp/message/querypersonpr.jsp"></forward>
			<forward name="jobmanage" path="/jsp/message/jobmanage.jsp"></forward>
			<forward name="editjob" path="/jsp/message/editjob.jsp"></forward>
			<forward name="querydept" path="/jsp/message/querydept.jsp"></forward>
		</action>
		<action path="/teachers" name="trainsMessageForm" type="com.schoolmanage.teacheractions.TeacherAction" parameter="flag">
			<forward name="teachermanage" path="/jsp/teacher/teachermanage.jsp"></forward>
			<forward name="editteacher" path="/jsp/teacher/editteacher.jsp"></forward>
			<forward name="queryteacher" path="/jsp/teacher/queryteacher.jsp"></forward>
			<forward name="checksmanage" path="/jsp/teacher/checksmanage.jsp"></forward>
			<forward name="editchecks" path="/jsp/teacher/editchecks.jsp"></forward>
			<forward name="querychecks" path="/jsp/teacher/querychecks.jsp"></forward>
			<forward name="gostrainmanage" path="/jsp/teacher/scheckmanage.jsp"></forward>
			<forward name="goaddstrain" path="/jsp/teacher/addscheck.jsp"></forward>
			<forward name="dealstrainmanage" path="/jsp/teacher/dealscheckmanage.jsp"></forward>
			<forward name="gotodeal" path="/jsp/teacher/dealscheck.jsp"></forward>
		</action>
		<action path="/retires" name="retireMessageForm" type="com.schoolmanage.retireactions.RetireAction" parameter="flag">
			<forward name="retiremanage" path="/jsp/retire/retiremanage.jsp"></forward>
			<forward name="editretire" path="/jsp/retire/editretire.jsp"></forward>
			<forward name="queryretire" path="/jsp/retire/queryretire.jsp"></forward>
			<forward name="wealmanage" path="/jsp/retire/wealmanage.jsp"></forward>
			<forward name="editweal" path="/jsp/retire/editweal.jsp"></forward>
			<forward name="queryweal" path="/jsp/retire/queryweal.jsp"></forward>
		</action>
		<action path="/rcgls"  name="rcglMessageForm" type="com.schoolmanage.rcglactions.RcglAction" parameter="flag">
			<forward name="rcplanmanage" path="/jsp/rcgl/rcplanmanage.jsp"></forward>
			<forward name="editrcplan" path="/jsp/rcgl/editrcplan.jsp"></forward>
			<forward name="queryrcplan" path="/jsp/rcgl/queryrcplan.jsp"></forward>
			<forward name="addrcplan" path="/jsp/rcgl/addrcplan.jsp"></forward>
			<forward name="rcmessmanage" path="/jsp/rcgl/rcmessmanage.jsp"></forward>		
			<forward name="editrcmess" path="/jsp/rcgl/editrcmess.jsp"></forward>	
			<forward name="queryrcmess" path="/jsp/rcgl/queryrcmess.jsp"></forward>
			<forward name="addrcmess" path="/jsp/rcgl/addrcmess.jsp"></forward>
			<forward name="rcheckmanage" path="/jsp/rcgl/rcheckmanage.jsp"></forward>
			<forward name="editrcheck" path="/jsp/rcgl/editrcheck.jsp"></forward>
			<forward name="queryrcheck" path="/jsp/rcgl/queryrcheck.jsp"></forward>
			<forward name="rcjobmanage" path="/jsp/rcgl/rcjobmanage.jsp"></forward>
			<forward name="editrcjob" path="/jsp/rcgl/editrcjob.jsp"></forward>
		</action>
		<action path="/service"  type="com.schoolmanage.serviceactions.ServiceAction" parameter="flag">
			<forward name="servicemanage" path="/jsp/service/servicemanage.jsp"></forward>
		</action>
	</action-mappings>
	<!-- 配置代理请求处理 DelegatingRequestProcessor 作用是先是ActionServlet找到action 如有代理则转到spring容器处理 -->
	<controller>
		<set-property property="processorClass"
			value="org.springframework.web.struts.DelegatingRequestProcessor" />
	</controller>
</struts-config>